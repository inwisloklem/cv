.projects
  border-bottom: 15px solid lighten($black, 10%)

  @media $desktops
    border-color: $cornflower-blue

  &__desktops
    display: none

    @media $desktops
      display: inline

  &__adaptive
    color: rgba($white, 50%)

    @media $desktops
      display: none

  &__list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    list-style-type: none

  &__info
    position: absolute
    right: 0
    bottom: 0
    left: 0
    z-index: 10
    padding: 15px
    background-color: lighten($black, 10%)
    color: $white
    letter-spacing: 1px
    font(12px, 1.2, 500)
    opacity: 0

    transition: opacity 0.2s linear

  &__title
    position: absolute
    top: 0
    right: 0
    left: 0
    display: inline-block
    padding: 10px 5px
    background-color: $cornflower-blue
    transition: border-color 0.4s linear

    @media $tablets
      padding: 20px 5px

    @media $desktops
      position: static
      padding: 5px 0
      width: auto
      border: none
      border-bottom: 2px solid transparent
      background-color: transparent

  &__item
    position: relative
    flex-basis: 100%
    background-position: center top 36px
    background-size: 100% auto
    background-repeat: no-repeat
    text-align: center

    transition: background-size 0.25s linear

    @media $tablets
      background-position: center top 58px

    @media $desktops
      background-position: center top

    @media $medium-desktop
      flex-basis: 50%

    @media $wide-desktop
      flex-basis: 33.3%

    &::before
      position: absolute
      display: block
      width: 100%
      height: 100%
      background-color: transparent
      content: ""

      transition: background-color 0.25s linear

    @media $desktops
      &:hover
        background-size: 105% auto

        transition: background-size 0.4s linear

        .projects__info
          opacity: 1

          transition: opacity 0.2s linear

        .projects__title
          border-color: rgba($white, 95%)

          transition: border-color 0.4s linear

        .projects__link
          color: rgba($white, 95%)

          transition: color 0.4s linear

      &:hover::before
        background-color: rgba($cornflower-blue, 90%)

        transition: background-color 0.2s linear

  &__link
    position: relative
    z-index: 5
    display: block
    padding: 34.7% 0
    color: $white
    text-decoration: none
    letter-spacing: 2px
    font(11px, 1.5, 600)

    transition: color 0.4s linear

    @media $tablets
      padding: 32% 0
      font-size: 13px

    @media $desktops
      padding: 28% 0
      color: transparent
      font-size: 14px

    @media $wide-desktop
      font-size: 15px

  for $i in 1..6
    &__item:nth-of-type({$i})
      background-image: url("../img/project-image-" + $i + "@2x.jpg")
