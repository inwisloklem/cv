.projects
  border-bottom: 15px solid $cornflower-blue

  &__list
    display: flex
    flex-direction: row
    flex-wrap: wrap
    list-style-type: none

  &__info
    position: relative
    z-index: 10
    padding: 15px
    background-color: lighten($black, 10%)
    color: $white
    letter-spacing: 1px
    font(12px, 1.5, 500)
    opacity: 0

    transition: opacity 0.2s linear

  &__item
    position: relative
    flex-basis: 33.3%
    background-position: center top
    background-size: auto 100%
    background-repeat: no-repeat
    text-align: center

    transition: background-size 0.25s linear

    &::before
      position: absolute
      display: block
      width: 100%
      height: 100%
      background-color: transparent
      content: ""

      transition: background-color 0.25s linear

    &:hover
      background-size: auto 105%

      transition: background-size 0.4s linear

      .projects__info
        opacity: 1

        transition: opacity 0.2s linear

    &:hover::before
      background-color: rgba($cornflower-blue, 90%)

      transition: background-color 0.2s linear

  &__link
    position: relative
    z-index: 5
    display: block
    padding: 30% 0
    color: transparent
    text-decoration: none
    letter-spacing: 2px
    font(16px, 1.5, 600, uppercase)

    transition: color 0.4s linear

    .projects__title
      display: inline-block
      padding: 10px 0
      border-bottom: 2px solid transparent

      transition: border-color 0.4s linear

    &:hover
      color: rgba($white, 95%)

      transition: color 0.4s linear

      .projects__title
        border-color: rgba($white, 95%)

        transition: border-color 0.4s linear

  for $i in 1..6
    &__item:nth-of-type({$i})
      background-image: url("../img/project-image-" + $i + "@2x.jpg")
